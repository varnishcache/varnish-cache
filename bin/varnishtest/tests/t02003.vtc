#######################################################################
# Test HEADERS error conditions

client c22 {
	stream 1 {
		txreq -nostrend
		txreq -nostrend
	} -run
	stream 0 {
		rxgoaway
	} -run
	expect_close
} -run

client c23 {
	stream 0 {
		sendhex 00000c
		sendhex 01
		sendhex 05
		sendhex 00000001
		sendhex ffffffff
		sendhex ffffffff
		sendhex ffffffff
		rxgoaway
		expect goaway.err == COMPRESSION_ERROR
	} -run
} -run

client c24 {
	stream 0 {
		sendhex 000012
		sendhex 01
		sendhex 05
		sendhex 00000001
		sendhex {8286 8441 0f77 7777 2e65 7861 6d70 6c65 2e63}
		rxgoaway
		expect goaway.err == COMPRESSION_ERROR
	} -run
} -run

client c25 {
	stream 1 {
		txreq -hdr ":bla" "foo"
		rxrst
		expect rst.err == PROTOCOL_ERROR
	} -run
} -run


#2349: Padding exceeds frame size
client c26 {
	stream 1 {
		sendhex 000001
		sendhex 01
		sendhex 09
		sendhex 00000001
		sendhex { ff }
	} -run
	stream 0 {
		rxgoaway
		expect goaway.err == PROTOCOL_ERROR
		expect goaway.laststream == 1
	} -run
	expect_close
} -run

#2349: Padding equal to frame size
client c27 {
	stream 1 {
		sendhex 000001
		sendhex 01
		sendhex 09
		sendhex 00000001
		sendhex 01
	} -run
	stream 0 {
		rxgoaway
		expect goaway.err == PROTOCOL_ERROR
		expect goaway.laststream == 1
	} -run
	expect_close
} -run

#2349: Integer underrun may also occur when the priority flag is set
client c28 {
	stream 1 {
		sendhex 000004
		sendhex 01
		sendhex 21
		sendhex 00000001
		sendhex { aabb ccdd }
	} -run
	stream 0 {
		rxgoaway
		expect goaway.err == PROTOCOL_ERROR
		expect goaway.laststream == 1
	} -run
	expect_close
} -run

varnish v1 -vsl_catchup

varnish v1 -expect MEMPOOL.req0.live == 0
varnish v1 -expect MEMPOOL.req1.live == 0
varnish v1 -expect MEMPOOL.sess0.live == 0
varnish v1 -expect MEMPOOL.sess1.live == 0

#######################################################################
# Test CONTINUATION error conditions

client c29 {
	stream 1 {
		txreq -nostrend
		txcont -hdr "bar" "foo"
	} -run
	stream 0 {
		rxgoaway
	} -run
	expect_close
} -run

client c30 {
	stream 0 {
		sendhex 000014
		sendhex 01
		sendhex 01
		sendhex 00000001
		sendhex {8286 8441 0f77 7777 2e65 7861 6d70 6c65 2e63 6f6d}

		sendhex 00000c
		sendhex 09
		sendhex 04
		sendhex 00000001
		sendhex ffffffff
		sendhex ffffffff
		sendhex ffffffff
		rxgoaway
		expect goaway.err == COMPRESSION_ERROR
	} -run
} -run

client c31 {
	stream 1 {
		txreq -nohdrend
		txcont -hdr "bar" "foo"
		rxresp
		expect resp.status == 200
	} -run
} -run

# 2350: Don't accept a continuation frame after stream is closed
client c32 {
	stream 1 {
		txreq
		rxresp
		txcont -hdr "foo" "bar"
	} -run

	stream 0 {
		rxgoaway
		expect goaway.err == PROTOCOL_ERROR
	} -run
} -run

varnish v1 -vsl_catchup

varnish v1 -expect MEMPOOL.req0.live == 0
varnish v1 -expect MEMPOOL.req1.live == 0
varnish v1 -expect MEMPOOL.sess0.live == 0
varnish v1 -expect MEMPOOL.sess1.live == 0

