# $Id$

test "Backend close retry"

server s1 -repeat 1 {
	rxreq 
	txresp -bodylen 5

	rxreq 
	accept

	rxreq
	txresp -bodylen 6

} -start

varnish v1 -vcl+backend {
	sub vcl_recv {
		return(pass);
	}
} -start

client c1 {
	txreq 
	rxresp
	expect resp.status == 200
	expect resp.bodylen == 5

	txreq 
	rxresp
	expect resp.status == 200
	expect resp.bodylen == 6
} -run

varnish v1 -expect backend_retry == 1
