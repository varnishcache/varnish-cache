test "Check that the first_byte_timeout works from backend definition"

server s1 -listen 127.0.0.1:9080 {
	rxreq
	delay 1.5
	txresp
} -start

varnish v1 -vcl {
	backend b1 {
		.host = "127.0.0.1";
		.port = "9080";
		.first_byte_timeout = 1s;
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 503
} -run


server s1 {
	rxreq
	delay 0.5
	txresp
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
} -run
