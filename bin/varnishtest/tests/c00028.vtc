varnishtest "Test that we can't recurse restarts forever"

varnish v1 -vcl {
	backend bad {
		.host = "${bad_ip}"; .port = "9090";
	}

	sub vcl_backend_fetch {
	    set bereq.backend = bad;
	}
	sub vcl_synth {
	    return (restart);
	}
 } -start

client c1 {
        txreq -url "/"
        rxresp
        expect resp.status == 503
} -run
