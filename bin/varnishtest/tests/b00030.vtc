# $Id$
# We can't test the value of x-timestamp, but this should fail
# if we can't set the header at all.

test "Test formatting of timestamps"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	sub vcl_recv {
		error 200 req.grace;
	}
	sub vcl_error {
		set obj.http.x-timestamp = now;
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.msg == "0.000"
} -run
