# $Id$

test "Regression test for ticket #306, random director ignoring good backend"

server s1 {

	rxreq
	expect req.url == /foo
	txresp -body "foo1"

	rxreq
	expect req.url == /bar
	txresp -body "bar1"

} -start

server s2 {
	rxreq
	txresp -status 404
} -start

varnish v1 -vcl {
	backend s1 {
		.host = "${s1_addr}"; .port = "${s1_port}";
	}
	backend s2 {
		.host = "${s2_addr}"; .port = "${s2_port}";
		.probe = {
			.url = "/";
			.initial = 0;
		}
	}
	director foo random {
		{ .backend = s2; .weight = 1; }
		{ .backend = s1; .weight = 1; }
	}

	sub vcl_recv {
		set req.backend = foo;
	}
} -start

client c1 {
	timeout 10

	txreq -url "/foo"
	rxresp
	expect resp.status == 200

	txreq -url "/bar"
	rxresp
	expect resp.status == 200

} -run
