test "Check the between_bytes_timeout behaves from backend definition"

server s1 {
	rxreq
	send "HTTP/1.1 200 Ok\r\nConnection: close\r\n\r\n"
	delay 1.5
	send "Baba\n"
} -start

varnish v1 -vcl {
	backend b1 {
		.host = "${s1_addr}";
		.port = "${s1_port}";
		.between_bytes_timeout = 1s;
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 503
} -run

server s1 {
	rxreq
	send "HTTP/1.1 200 Ok\r\nConnection: close\r\n\r\n"
	delay 0.5
	send "Baba\n"
	delay 0.5
	send "Baba\n"
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
} -run
