varnishtest "Test -gzipbody and -gziplen"

server s1 {
	stream 1 {
		rxreq
		txresp -gzipbody "foo"
	} -run

	stream 3 {
		rxreq
		txresp -gziplen 10
	} -run
} -start

client c1 -connect ${s1_sock} {
	stream 1 {
		txreq
		rxresp
		gunzip
		expect resp.body == "foo"
	} -run

	stream 3 {
		txreq
		rxresp
		gunzip
		expect resp.bodylen == 10
	} -run
} -run

server s1 -wait
