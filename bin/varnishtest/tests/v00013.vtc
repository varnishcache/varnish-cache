varnishtest "Check obj.hits"

server s1 {
	rxreq
	expect req.url == "/"
	txresp -body "slash"
	rxreq
	expect req.url == "/foo"
	txresp -body "foo"
} -start

varnish v1 -vcl+backend {

	sub vcl_deliver {
		set resp.http.foo = obj.hits;
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
	expect resp.http.foo == 0

	txreq
	rxresp
	expect resp.status == 200
	expect resp.http.foo == 1

	txreq -url /foo
	rxresp
	expect resp.status == 200
	expect resp.http.foo == 0

	txreq
	rxresp
	expect resp.status == 200
	expect resp.http.foo == 2
} -run 
