varnishtest "Check synthetic error page caching"

# First test that an internally generated error is not cached

varnish v1 -vcl { 
	backend foo {
		.host = "${bad_ip}"; .port = "9080";
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.status == 503
	expect resp.http.X-varnish == "1001"
} -run

client c1 {
	txreq -url "/"
	rxresp
	expect resp.status == 503
	expect resp.http.X-varnish == "1002"
} -run

# Then check that an cacheable error from the backend is 

server s1 {
	rxreq
	txresp -status 302
} -start

varnish v1 -vcl+backend { }

client c1 {
	txreq -url "/"
	rxresp
	expect resp.status == 302
	expect resp.http.X-varnish == "1003"
} -run

client c1 {
	txreq -url "/"
	rxresp
	expect resp.status == 302
	expect resp.http.X-varnish == "1004 1003"
} -run

# Then check that a non-cacheable error from the backend can be

server s1 {
	rxreq
	txresp -status 502
} -start

varnish v1 -vcl+backend {
	sub vcl_fetch {
		if (beresp.status == 502) {
			set beresp.ttl = 10m;
		}
	}
}

client c1 {
	txreq -url "/2"
	rxresp
	expect resp.status == 502
	expect resp.http.X-varnish == "1005"
} -run

client c1 {
	txreq -url "/2"
	rxresp
	expect resp.status == 502
	expect resp.http.X-varnish == "1006 1005"
} -run
