varnishtest "pipe of chunked request"

server s1 {
	rxreq
	expect req.bodylen == 3
	txresp -body "ABCD"
} -start

varnish v1 -vcl+backend {
	sub vcl_recv {
		return (pipe);
	}
} -start

client c1 {
	txreq -req MAGIC -nolen -hdr "Transfer-encoding: chunked"
	chunked {BLA}
	chunkedlen 0
	rxresp
	expect resp.status == 200
	expect resp.bodylen == 4
} -run
