# $Id$

test "Test restart in vcl_error"

server s1 -listen 127.0.0.1:9080 {
        rxreq 
        txresp 
} -start

varnish v1 -vcl { 
	backend bad { 
		.host = "127.0.0.1";
		.port = "9099";
	}
	backend good { 
		.host = "127.0.0.1";
		.port = "9080";
	}
	sub vcl_recv {
		if (req.restarts > 0) {
			set req.backend = good;
		}
	}
	sub vcl_error { 
		if (req.restarts < 1) { 
			restart; 
		} else { 
			set obj.status = 201; 
		}
	 }
 } -start 

client c1 {
        txreq -url "/"
        rxresp
        expect resp.status == 200
} -run

